---
import { data } from '@data'
import Badge from '@ui/badge.astro'
import CardContent from '@ui/card/card-content.astro'
import CardHeader from '@ui/card/card-header.astro'
import CardTitle from '@ui/card/card-title.astro'
import Card from '@ui/card/card.astro'
const es = Astro.url.pathname.startsWith('/es')
const { skills } = es ? data.es : data.en
---

<Card class='mt-6'>
  <CardHeader>
    <CardTitle>Skills</CardTitle>
  </CardHeader>
  <CardContent>
    <div class='flex flex-wrap gap-2'>
      {
        skills.map(({ name, icon }, i) => (
          <Badge
            key={i}
            variant='secondary'
            className='dark:text-white/80 dark:border-white/15 flex gap-1 items-center'
          >
            {icon && <img src={`/skills/${icon}`} class='h-3' />}
            {name}
          </Badge>
        ))
      }
    </div>
  </CardContent>
</Card>
