---
import AboutMe from "@components/about-me.astro";
import Experience from "@components/experience.astro";
import Header from "@components/layout/header.astro";
import Projects from "@components/projects.astro";
import Sidebar from "@components/sidebar.astro";
import { data } from "@data";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Freilyn Bernabe | Software Engineer</title>
    <meta name="description" content={data.profile.description} />
  </head>
  <body class="min-h-screen text-black dark:text-white relative">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-white dark:bg-[#030712]
    bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
    dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <div class="container max-w-screen-lg mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {/* (Profile and Skills) Sidebar Section */}
        <Sidebar />
        {/* Main Section */}
        <main class="md:col-span-2">
          {/* About Me Section */}
          <AboutMe />
          {/* Projects Section */}
          <Projects />
          {/* Experience Section */}
          <Experience />
        </main>
      </div>
    </div>
  </body>
</html>
